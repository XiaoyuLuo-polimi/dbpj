<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="GamifiedEJB"
		transaction-type="JTA">
		<jta-data-source>GamifiedDB</jta-data-source>
		<class>it.polimi.db2.entities.User</class>
		<class>it.polimi.db2.entities.Administrator</class>
		<class>it.polimi.db2.entities.MarketingAnswer</class>
		<class>it.polimi.db2.entities.MarketingQuestion</class>
		<class>it.polimi.db2.entities.MktqOfProduct</class>
		<class>it.polimi.db2.entities.OffensiveWord</class>
		<class>it.polimi.db2.entities.Questionnaire</class>
		<class>it.polimi.db2.entities.Product</class>
        <class>genentity.AdministratorEntity</class>
        <class>genentity.MarketingAnswerEntity</class>
        <class>genentity.MarketingQuestionEntity</class>
        <class>genentity.OffensiveWordEntity</class>
        <class>genentity.ProductEntity</class>
        <class>genentity.QuestionnaireEntity</class>
        <class>genentity.UserEntity</class>

        <properties>
			<property name="eclipselink.logging.level" value="FINE" />
            <property name="eclipselink.jdbc.url"
                      value="jdbc:mysql://ec2-18-179-43-16.ap-northeast-1.compute.amazonaws.com:3306/db2"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
	</persistence-unit>
</persistence>
